<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<LinearLayout
		android:id="@+id/linear1"
		android:layout_width="match_parent"
		android:layout_height="100dp"
		android:layout_margin="10dp"
		android:background="#000027"
		android:gravity="center_vertical"
		android:orientation="horizontal">
		<LinearLayout
			android:id="@+id/linear3"
			android:layout_width="100dp"
			android:layout_height="match_parent"
			android:padding="8dp"
			android:background="#FF8800"
			android:gravity="center_vertical"
			android:orientation="vertical">
			<TextView
				android:id="@+id/project_id"
				android:focusable="false"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:text="100"
				android:textSize="20sp"
				android:textStyle="bold"
				android:textColor="#FFFFFF"
				android:rotation="90"
				android:translationX="-12.0dp" />
		</LinearLayout>
		<LinearLayout
			android:id="@+id/linear4"
			android:layout_width="77dp"
			android:layout_height="77dp"
			android:padding="5dp"
			android:background="#00003A"
			android:gravity="center_horizontal|center_vertical"
			android:orientation="horizontal"
			android:translationX="-45.0dp">
			<de.hdodenhof.circleimageview.CircleImageView
				android:id="@+id/circleimageview1"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:src="@drawable/vs1"
				app:civ_border_width="5dp"
				app:civ_border_color="#000027"
				app:civ_circle_background_color="#000027"
				app:civ_border_overlay="true" />
		</LinearLayout>
		<LinearLayout
			android:id="@+id/linear5"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:gravity="center_vertical"
			android:orientation="vertical"
			android:translationX="-30.0dp">
			<TextView
				android:id="@+id/project_name"
				android:focusable="false"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginBottom="5dp"
				android:text="Project Name"
				android:textSize="18sp"
				android:textStyle="bold"
				android:textColor="#5191FF" />
			<LinearLayout
				android:id="@+id/linear6"
				android:layout_width="match_parent"
				android:layout_height="20dp"
				android:padding="8dp"
				android:orientation="horizontal" />
			<TextView
				android:id="@+id/package_name"
				android:focusable="false"
				android:layout_width="170dp"
				android:layout_height="wrap_content"
				android:text="com.my.newproject100"
				android:textSize="12sp"
				android:textColor="#5191FF" />
		</LinearLayout>
	</LinearLayout>
</LinearLayout>
